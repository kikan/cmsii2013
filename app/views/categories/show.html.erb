<p id="notice"><%= notice %></p>

<p>
  <strong>Libelle:</strong>
  <%= @categorie.libelle %>
</p>

<p>
  <strong>Fichier image:</strong>
  <%= @categorie.fichier_image %>
</p>

<p>
  <strong>Liste des objets</strong>
  <ul>    
    <% @categorie.objets.each do |objet| %>
      <li><%= link_to objet.libelle, objet %></li>
    <% end %>
  </ul>
</p>

<p>
  <strong>Image</strong>
  <%= image_tag "../uploads/categories/#{@categorie.id}" %>
</p>

<%= link_to 'Edit', edit_categorie_path(@categorie) %> |
<%= link_to 'Back', categories_path %>
