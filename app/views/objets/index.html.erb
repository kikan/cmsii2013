<h1>Listing objets</h1>

<table>
  <thead>
    <tr>
      <th>Libelle</th>
      <th>Valeur</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @objets.each do |objet| %>
      <tr>
        <td><%= objet.libelle %></td>
        <td><%= objet.valeur %></td>
        <td><%= link_to 'Show', objet %></td>
        <td><%= link_to 'Edit', edit_objet_path(objet) %></td>
        <td><%= link_to 'Destroy', objet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
             <!-- UJS : Unobstrusive JavaScript -->
             <button class="btn btn-success ajouter_au_panier"                     
                       id="<%= objet.id %>">
               Ajouter au panier
             </button>
        </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>Contenu du panier</h3>
<div id="contenu_du_panier">Ici, on affichera le retour ajax</div>

<%= link_to 'New Objet', new_objet_path, class:"btn btn-success" %>


